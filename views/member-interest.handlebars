<div class="row mt-4">
  <div class="col-md-6">
    <h3>Select activities you are interested in:</h3>

    <form class="interest-form">
      <div class="checkboxes">
        <h2>Select activities you are interested in</h2>
        {{#each activities as |activity|}}
        <input type="checkbox" id="activity{{activity.id}}" name="activity" value="{{activity.id}}">
        <label for="activity{{activity.id}}"> {{activity.activity_name}}</label><br>
        {{/each}}

        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>

    <script src="./js/profile.js"></script>